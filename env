#!/bin/sh

export MHVAVRTOOLS=/usr/local/mhvavrtools
export PATH="$PATH:$MHVAVRTOOLS/bin"

export MHVLIBTOP="$HOME/mhvlib"

echo Preparing makefiles
for file in `find . -name subdir.mk`; do
	test -f "$file.orig" || {
		cp "$file" "$file.orig"
		sed "s%A:\\\\eclipse\\\\%$MHVLIBTOP/%" "$file.orig" >"$file"
	}
done

for file in `find . -name makefile`; do
	test -f "$file.orig" || {
		cp "$file" "$file.orig"
		sed "s%A:\\\\eclipse\\\\%$MHVLIBTOP/%" "$file.orig" >"$file"
	}
done
